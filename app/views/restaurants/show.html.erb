<div class="container">
  <h2><%= @restaurant.name %></h2>
  <br>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone Number: </strong><%= @restaurant.phone_number %></p>
  <%= link_to "Go Back", restaurants_path, class: "btn btn-primary" %>
  <%= link_to "Delete Restaurant", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-button btn btn-danger" %>
  <br>
  <br>
  <hr>
  <br>
  <h4>Reviews</h4>
  <br>
  <% @restaurant.reviews.each do |review| %>
    <p><strong>Rating: </strong><%= review.rating %>/5</p>
    <p>"<%= review.content %>"</p>
  <%end%>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary" %>
</div>
